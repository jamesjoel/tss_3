<%- include('../includes/header') %>
<div class="container" style="min-height: 700px; margin-top: 100px !important;">
    
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <% if(result.length > 0){ %>
            <a href="/student/removeall" class="btn btn-danger btn-sm">Delete All</a>
            <h3 class="text-center">List of All Student</h3>
            <table class="table table-dark table-bordered table-striped">
                <tr>
                    <th>S.No.</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>View</th>
                    <th>Delete</th>
                    <th>Edit</th>
                </tr>
                <% result.forEach((item, i)=>{ %>
                    <tr>
                        <td><%= i+1 %></td>
                        <td><%= item.name %></td>
                        <td><%= item.email %></td>
                        <td><a href="/student/detail?id=<%= item._id %>" class="btn btn-sm btn-info"><i class="fa fa-eye" aria-hidden="true"></i></a></td>
                        <td><a href="/student/delete?id=<%= item._id %>" class="btn btn-sm btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a></td>
                        <td><a href="/student/edit?id=<%= item._id %>" class="btn btn-warning btn-sm"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a></td>
                    </tr>
                <% }) %>
            </table>
            <% }else{ %>
                <div class="alert alert-info">No Data Found</div>
            <% } %>
        </div>
    </div>
    
</div>
<%- include('../includes/footer') %>