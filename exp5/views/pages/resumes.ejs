<%- include("../includes/header") %>
<div class="container my-3" style="min-height: 700px; margin-top: 100px !important;">
    <form action="/resume/save" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-12"><h2>All Resumes</h2>
            <div class="form-group">
                <label>Resume Title</label>
                <input type="text" name="title" class="form-control" />
            </div>
            <div class="form-group">
                <label>Select Resume</label>
                <input type="file" name="file" class="form-control" />
            </div>
            <br />
            <input type="submit" value="Add" class="btn btn-primary" />
        </div>
        <div class="col-md-8 offset-md-2">
            <table class="table table-dark table-hover table-bordered">
                <tr>
                    <th>S.No.</th>
                    <th>Name</th>
                    <th>Download</th>
                </tr>

                <% result.forEach((x, i)=>{ %>
                    <tr>
                        <td><%= i+1 %></td>
                        <td><%= x.title %></td>
                        <td><a download href="/resumes/<%= x.name %>"><i class="fa fa-download" aria-hidden="true"></i></a></td>
                    </tr>
                <% }) %>

            </table>
        </div>
    </div>
    </form>
</div>
<%- include("../includes/footer") %>