<%- include('../includes/header') %>
<div class="container my-4" style="min-height: 700px;">
    <h2><%
        if(result._id !=""){ %>
            Update
        <% }else{ %>
            Add New
        <% } %>
        
        
        
        
        Employee</h2>
    <form action="
            <% if(result._id !=''){ %>
                /employee/update?id=<%= result._id %>
            <% }else{ %>
                /employee/save
            <% } %>
    " method="post">
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <div class="form-group">
                <label for="">Full Name</label>
                <input type="text" value="<%= result.name %>" name="name" class="form-control" />
            </div>
            <div class="form-group">
                <label for="">Age</label>
                <input type="text" value="<%= result.age %>" name="age" class="form-control" />
            </div>
            <div class="form-group">
                <label for="">Salary</label>
                <input type="text" value="<%= result.salary %>" name="salary" class="form-control" />
            </div>
            <div class="form-group">
                <label for="">Address</label>
                <textarea class="form-control" name="address"><%= result.address %></textarea>
            </div>
            <Br />
            <input type="submit" value="<% if(result._id !=''){ %>Update<% }else{ %>Add<% } %>" class="btn btn-primary" />
        </div>
    </div>
</form>
</div>
<%- include('../includes/footer') %>