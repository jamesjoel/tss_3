<%- include('../includes/header') %>
<div class="container my-4" style="min-height: 700px;">
    <h2>Employee Page</h2>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-dark table-bordered">
                <tr>
                    <th>S.No.</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Salary</th>
                    <th>Delete</th>
                    <th>Update</th>
                </tr>
                <% result.forEach((e, n)=>{ %>
                    <tr>
                        <td><%= n+1 %></td>
                        <td><%= e.name %></td>
                        <td><%= e.age %></td>
                        <td><%= e.salary %></td>
                        <td><a href="/employee/delete?id=<%= e._id %>" class="btn btn-sm btn-danger">Delete</a></td>
                        <td><a href="/employee/edit?id=<%= e._id %>" class="btn btn-sm btn-info">Update</a></td>                    </tr>
                <% }) %>
            </table>
        </div>

    </div>
</div>
<%- include('../includes/footer') %>